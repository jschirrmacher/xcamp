<html lang="de">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>XCamp Blog - {{title}}</title>
    <base href="{{baseUrl}}">
    <link rel="stylesheet" href="dist/css/main.css">
</head>

<body>
{{> menu}}
{{> logo}}
<div id="main">
    <div class="container semi-transparent blog-entry">
        <div class="pager">
            {{#prevPage}}<a href="blog/{{prevPage}}">&lt; Vorherige Seite</a>{{/prevPage}}
            {{#nextPage}}<a href="blog/{{nextPage}}">NÃ¤chste Seite &gt;</a>{{/nextPage}}
        </div>

        <h1>{{title}}</h1>

        {{&text}}

        <div class="social-networks-wrapper">
            <a href="{{twitter}}" class="social-network-icon icon-twitter"
               target="_blank" rel="noopener noreferrer" title="Share on Twitter">
            </a>
            <a href="{{facebook}}" class="social-network-icon icon-facebook"
               target="_blank" rel="noopener noreferrer" title="Share on Facebook">
            </a>
        </div>
    </div>
</div>

{{> footer}}
<script src="common.js"></script>
<script>
    setMenuState()
</script>

</body>
</html>
