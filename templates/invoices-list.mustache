        <td>{{customer.person.firstName}}</td>
        <td>{{customer.person.lastName}}</td>
        <td>{{customer.person.email}}</td>
        <td><a href="accounts/{{customer.access_code}}/invoices/current" target="_blank">Rechnung</a></td>
    </tr>
{{/invoices}}
</table>
</body>
</html>
