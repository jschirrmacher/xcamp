<div class="row">
    <div class="form-group col-4">
        <label>
            <input type="text" name="participant_firstName" class="form-control" autocomplete="off"
                   placeholder="Vorname" value="{{{participant.firstName}}}" required/>
        </label>
    </div>
    <div class="form-group col-4">
        <label>
            <input type="text" name="participant_lastName" class="form-control" autocomplete="off"
                   placeholder="Name" value="{{{participant.lastName}}}" required/>
        </label>

    </div>
</div>

<div class="row">
    <div class="form-group col-8">
        <label>
            <input type="email" name="participant_email" class="form-control" autocomplete="off"
                   placeholder="E-Mail-Adresse" value="{{{participant.email}}}" required/>
        </label>
    </div>
</div>
