<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>XCamp 2018 Tickets</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="/ticket.css">
</head>
<body>
<div class="container">
    <div class="ticket">
        <canvas class="ticketNo" id="{{access_code}}"></canvas>
        <img class="logo"
             src="http://xcamp.autentity.net/wp-content/uploads/sites/18/2017/07/Xcamp_Logo_110px_124_px_yellow.png">
        <h2>XCamp Ticket</h2>
        <p class="location">25.08.2018 9:00 im Skydeck der DB Systel, Jürgen-Ponto-Platz 1, Frankfurt</p>
        <div class="row">
            <div class="form-group col-4">
                <label>
                    <input type="text" name="participant_firstName" class="form-control" autocomplete="off"
                           placeholder="Vorname" value="{{{firstName}}}" required/>
                </label>
            </div>
            <div class="form-group col-4">
                <label>
                    <input type="text" name="participant_lastName" class="form-control" autocomplete="off"
                           placeholder="Name" value="{{{lastName}}}" required/>
                </label>

            </div>
        </div>

        <div class="row">
            <div class="form-group col-8">
                <label>
                    <input type="email" name="participant_email" class="form-control" autocomplete="off"
                           placeholder="E-Mail-Adresse" value="{{{email}}}" required/>
                </label>
            </div>
        </div>

        <div class="form-group">
            <button class="send-ticket">Änderungen speichern</button>
            <button class="print-ticket">Ausdrucken</button>
        </div>
    </div>
</div>


<script src="/qrcode/qrcode.min.js"></script>
<script>
    [].forEach.call(document.getElementsByClassName('ticketNo'), function (el) {
        QRCode.toCanvas(el, location.origin + '/ticket/' + el.id)
    })
</script>
</body>
</html>
